<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundadditem"
    tools:context=".AddItemViews">

    <EditText
        android:id="@+id/prodET"
        android:layout_width="269dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/design_default_color_primary"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:hint="Enter Product Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#7743DB"
        android:textColorHint="#C7C8CC"
        android:textSize="23dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/quantityET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <EditText
        android:id="@+id/quantityET"
        android:layout_width="269dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:hint="Quantity"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#7743DB"
        android:textColorHint="#C7C8CC"
        android:textSize="23dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324" />

    <EditText
        android:id="@+id/costET"
        android:layout_width="269dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:hint="Cost"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#7743DB"
        android:textColorHint="#C7C8CC"
        android:textSize="23dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantityET"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/priceET"
        android:layout_width="269dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:hint="Price"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#7743DB"
        android:textColorHint="#C7C8CC"
        android:textSize="23dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costET"
        app:layout_constraintVertical_bias="0.047" />

    <Button
        android:id="@+id/addpBTN"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:background="@drawable/ripple_effect"
        android:backgroundTint="#7743DB"
        android:text="Add Product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceET"
        app:layout_constraintVertical_bias="0.087" />

    <ImageButton
        android:id="@+id/backitem"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:background="@drawable/backarrow"
        android:backgroundTint="#7743DB"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/plistb"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:background="@drawable/ripple_effect"
        android:text="Product List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986" />

</androidx.constraintlayout.widget.ConstraintLayout>